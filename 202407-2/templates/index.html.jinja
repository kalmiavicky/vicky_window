{% extends 'base.html.jinja' %}

{% block title %}
{{ super() }} - 首頁
{% endblock %}

{% block head %}
{{ super() }}
<style type="text/css">
  body {
    background-color: white;
  }
</style>
{% endblock %}

{% block main %}
<div class="container text-center">
  <div class="row">
    <div class="col-3" style="background-color:beige">
      <!-- 芒果品種選擇 -->
      <iframe src="/dash/" width="100%" height="600" style="border:none;"></iframe>
    </div>
    <div class="col-9">
      <h3 style="text-align:left;margin-top:0.5em">{{ show_area }}</h3>
      <div id="right-data">
        {% if detail_snaes %}
        <table class="table table-striped">
          <thead>
            <tr>
              <th>站點</th>
              <th>總車輛數</th>
              <th>可借</th>
              <th>可還</th>
              <th>時間</th>
              <th>狀態</th>
            </tr>
          </thead>
          <tbody>
            {% for row in detail_snaes %}
            <tr>
              <td>{{ row[0] }}</td>
              <td>{{ row[1] }}</td>
              <td>{{ row[2] }}</td>
              <td>{{ row[3] }}</td>
              <td>{{ row[4] }}</td>
              <td>{{ row[5] }}</td>
            </tr>
            {% endfor %}
          </tbody>
        </table>
        {% else %}
        <p>未選擇任何資料</p>
        {% endif %}
      </div>
    </div>
  </div>
</div>
{% endblock %}
